{
  "plugins": ["lodash"],
  "extends": ["wix-editor/node", "plugin:lodash/recommended"],
  "env": {
    "node": true,
    "browser": false
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "semi": ["error", "never"],
    "no-confusing-arrow": "off",
    "lodash/path-style": ["error", "as-needed"],
    "lodash/prefer-lodash-method": "off",
    "indent":"off",
    "sort-imports": "off",
    "no-restricted-globals": [2, {
      "name": "fdescribe",
      "message": "Do not commit fdescribe."
    }, {
      "name": "fit",
      "message": "Do not commit fit."
    }]
  }
}