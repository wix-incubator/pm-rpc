{
  "plugins": ["lodash", "jasmine"],
  "extends": ["wix-editor/node", "plugin:lodash/recommended"],
  "env": {
    "node": true,
    "browser": false
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "semi": ["error", "never"],
    "no-confusing-arrow": "off",
    "lodash/path-style": ["error", "as-needed"],
    "jasmine/no-focused-tests": 2
  }
}